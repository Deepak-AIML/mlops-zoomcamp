import pandas as pd
import os


if 'data_loader' not in globals():
    from mage_ai.data_preparation.decorators import data_loader
if 'test' not in globals():
    from mage_ai.data_preparation.decorators import test

# Define the path to the 'mlops' directory
mlops_directory = os.path.join('/home/src', 'mlops', 'unit_1_data_preparation', 'data_loaders')

# Check if the directory exists
if os.path.exists(mlops_directory):
    print(f"Contents of the directory '{mlops_directory}':")
    for item in os.listdir(mlops_directory):
        item_path = os.path.join(mlops_directory, item)
        if os.path.isdir(item_path):
            print(f"Folder: {item}")
        else:
            print(f"File: {item}")
else:
    print(f"Directory does not exist: {mlops_directory}")


@data_loader
def load_data(*args, **kwargs):
    """
    Template code for loading data from any source.

    Returns:
        Anything (e.g. data frame, dictionary, array, int, str, etc.)
    """
    # Specify your data loading logic here
    data = pd.read_parquet('/home/src/mlops/unit_1_data_preparation/data_loaders/yellow_tripdata_2023-03.parquet')

    return data


